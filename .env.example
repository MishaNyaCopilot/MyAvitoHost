# Avito API Configuration
# Get your credentials from https://www.avito.ru/professionals/api
AVITO_CLIENT_ID=your_avito_client_id_here
AVITO_CLIENT_SECRET=your_avito_client_secret_here

# Telegram Bot Configuration
# Create a bot via @BotFather on Telegram to get your token
AVITO_TG_BOT_TOKEN=your_telegram_bot_token_here

# Telegram User IDs for Notifications
# Comma-separated list of Telegram user IDs that should receive notifications
# You can get your user ID by messaging @userinfobot on Telegram
USER_TELEGRAM_IDS=123456789,987654321

# Database Configuration
# SQLite example (default, stores data in a local file):
DATABASE_URL=sqlite:///./avito_rental.db
# PostgreSQL example (for production use):
# DATABASE_URL=postgresql://username:password@localhost:5432/avito_rental
# MySQL example:
# DATABASE_URL=mysql://username:password@localhost:3306/avito_rental

# MCP Server Configuration
# URL where the FastMCP server is running
MCP_SERVER_URL=http://127.0.0.1:8314/mcp
MCP_SERVER_HOST=127.0.0.1
MCP_SERVER_PORT=8314

# Ollama Configuration
# Model to use for AI chat (must be pulled via 'ollama pull <model>')
OLLAMA_MODEL=gemma3:latest
# Ollama API URL (default is localhost)
OLLAMA_API_URL=http://localhost:11434

# Application Paths
# Directory containing apartment information files
APARTMENT_INFO_DIR=data/apartment_info
# Directory containing prompt templates
PROMPTS_DIR=data/prompts

# Logging Configuration
LOG_LEVEL=INFO
